{
  "manifest_version": 3,
  "name": "Meeting Recorder Pro",
  "version": "1.0.0",
  "description": "Professional meeting recorder with on-screen controls and cloud storage",

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "desktopCapture",
    "tabCapture",
    "offscreen",
    "notifications",
    "scripting"
  ],

  "host_permissions": ["*://localhost:*/*", "*://api.meetingrecorder.com/*"],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "css": ["ui/recorder-widget.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "Meeting Recorder Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "ui/offscreen.html",
        "ui/dashboard.html",
        "ui/recorder-widget.css",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
